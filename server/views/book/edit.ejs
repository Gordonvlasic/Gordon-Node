<%- include ('../partials/header') %>


<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6"></div>
        <h1><%= title %></h1>


        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Book Title"
                name="name" 
                value="<%= book.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control"
                id="authorTextField"
                placeholder="Enter the Book Title"
                name="author" 
                value="<%= book.author %>"
                required>
            </div>

            <div class="form-group">
                <label for="publishedTextField">Year</label>
                <input type="text" class="form-control"
                id="publishedTextField"
                placeholder="Enter the year of publication"
                name="published" 
                value="<%= book.published %>"
                required>
            </div>

            <div class="form-group">
                <label for="descriptionTextField">Description</label>
                <input type="text" class="form-control"
                id="descriptionTextField"
                placeholder="Enter a brief description about the book"
                name="description"
                value="<%= book.description %>"
                required>
            </div>

            <div class="form-group">
                <label for="descriptionTextField">Price</label>
                <input type="number" class="form-control"
                id="priceTextField"
                placeholder="Enter the price of the book"
                name="price" 
                value="<%= book.price %>"
                required>
            </div>
           
            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i>Confirm</button>

                <a href="/book-list" class="btn btn-warning"><i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
</div>








<%- include ('../partials/footer') %>